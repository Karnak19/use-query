{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "strictNullChecks": false,
    "strict": false,
    "skipLibCheck": true,
    "lib": ["dom", "esnext", "DOM.Iterable"],
    "target": "es6",
    "moduleResolution": "node"
  },
  "include": ["/**/*"],
  "exclude": ["node_modules", "dist"]
}
